@using Nhom4_CuaHangAnPhuoc.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
</style>
<h2>GioHangCuaBan</h2>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color:lightyellow">
            <th>MA SAN PHAM</th>
            <th>TEN SAN PHAM</th>
            <th>ANH BIA</th>
            <th>SO LUONG </th>
            <th>DON GIA</th>
            <th>THANH TIEN  </th>
            <th></th>

            <th><a href="@Url.Action("XoaGioHang_All","GioHang")">Xoa ALL</a></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.iMaSP</td>
                <td width="26%">@item.sTenSP</td>
                <td width="30%"><img src="~/img/Product/@item.sAnhBia" width="50%" /></td>
               
                <td width="12%">
                    @Html.Hidden("MaSP", item.iMaSP)
                    <input style="width:50px" name="txtSoLuong" value="@item.iSoLuong" type="number" />
                </td>
                <td width="12%">@string.Format("{0:0,0}", item.sDonGia)</td>
                <td width="16%">@string.Format("{0:0,0}", item.dThanhTien)</td>
                @*<td><a href="@Url.Action("ShowDetailProduct","Product",new { id = item.iMaSP})">Detail</a></td>*@
                <td><a href="@Url.Action("XoaGioHang","GioHang",new { MaSP = item.iMaSP})" class="btn btn-sm btn-outline-danger">Xoa</a></td>
                @*<td><a href="@Url.Action("CapNhapGioHang","GioHang",new { MaSP = item.iMaSach})">Update</a></td>*@
                <td style="text-align:center"><input type="submit" value="Update" /></td>
            </tr>
        }

        <tr style="background-color:lightyellow">
            <td colspan="3" style="color:blue ; font-weight:bold; text-align:right;">Tong Cong:</td>
            <td style="color:red; font-weight:bold">@ViewBag.TongSoLuong</td>
            <td></td>
            <td></td>
            <td></td>
            <td style="color:red ; font-weight:bold">@string.Format("{0:0,0}", ViewBag.TongThanhTien) VND</td>
        </tr>


        <tr style="font-weight: bold; color:blue; text-align:right  " >
            <td colspan="9" align="center" class="btn btn-primary " style="background-color:red">
                @Html.ActionLink("Dat Hang", "DatHang", "GioHang")
            </td>
        </tr>
    </table>
    
</div>



